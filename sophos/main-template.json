{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "baseUrl": "https://raw.githubusercontent.com/ooha-m/test-base/master/sophos",
        "location": "[resourcegroup().location]",
        "adminUsername": "azureuser",
        "adminPassword": "Azurepassword@123",
        "clientVmUsername": "clientuser",
        "clientVmPassword": "clientpassword@123",
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('netName'))]",
        "subnet1": "[concat(variables('vnetID'),'/subnets/',variables('wanName'))]",
        "subnet2": "[concat(variables('vnetID'),'/subnets/',variables('lanName'))]",
        "ipConfigName": "ipconfig",
        "publicIpDNS": "xgdns",
        "clientIpDNS": "cxg",
        "imageSku": "payg",
        "imageVersion":"latest",
        "vmName": "XG-Firewall",
        "clientVmName": "clientVM",
        "vmSize": "Standard_A3",
        "clientVmSize": "Standard_D1_V2",
        "netName": "XGVNET",
        "netPrefix": "10.0.0.0/16",
        "wanName": "WAN",
        "wanPrefix": "10.0.0.0/24",
        "lanName": "LAN",
        "lanPrefix": "10.0.1.0/24",
        "publicIpName": "XGPubIP",
        "storageType": "Standard_LRS",
        "storageEndpoint": "blob.core.windows.net",
        "storageName": "[concat(uniquestring(resourceGroup().id), 'xgfwsa')]",
        "nicWan": "XGWAN",
        "nicLan": "XGLAN",
        "nsgName": "XGWANSecurityGroup",
        "availabilitySetName": "xgAvailabilitySet",
        "publicIpTemplate": "[concat(variables('baseUrl'),'/nested/public-ip.json')]",
        "netTemplate": "[concat(variables('baseUrl'),'/nested/vnet-2subnets.json')]",
        "storageTemplate": "[concat(variables('baseUrl'),'/nested/storage.json')]",
        "nicTemplate": "[concat(variables('baseUrl'),'/nested/network-interface.json')]",
        "nic2Template": "[concat(variables('baseUrl'),'nested/nic-without-nsg-dynamic.json')]",
        "vhdContainer": "vhds",
        "apiVersion": {
            "resources": {
                "deployments": "2016-02-01"
            },
            "network": "2015-06-15",
            "storage": "2016-01-01",
            "compute": "2016-03-30"
        },
        "imagePublisher": "sophos",
        "imageOffer": "sophos-xg",
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 7)]",
        "pipdns": "[concat(variables('publicIpDNS'),variables('suffix'))]",
        "clientNicName": "clientVMNic",
        "clientPipName": "clientVmPip",
        "clientVmDnsPrefix": "[concat(variables('clientIpDNS'),variables('suffix'))]",
        "clientNsgName": "clientVmNsg",
        "clientSaName": "[concat(uniquestring(resourceGroup().id), 'clientsa')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[variables('availabilitySetName')]",
            "apiVersion": "[variables('apiVersion').compute]",
            "location": "[variables('location')]",
            "properties": {}
        },
        {
            "name": "SettingUpStorageAccount",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion').resources.deployments]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageName')]"
                    },
                    "storageAccountType": {
                        "value": "[variables('storageType')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "name": "[variables('nsgName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "location": "[variables('location')]",
            "apiVersion": "[variables('apiVersion').network]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allow_webui",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "4444",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1005,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow_ssh",
                        "properties": {
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1003,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "SettingUpPublicIP",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion').resources.deployments]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('publicIpTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "publicIPAddressName": {
                        "value": "[variables('publicIpName')]"
                    },
                    "publicIPdnsPrefix": {
                        "value": "[variables('pipdns')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "name": "SettingUpVirtualNetwork",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion').resources.deployments]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('netTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetName": {
                        "value": "[variables('netName')]"
                    },
                    "vnetAddressPrefix": {
                        "value": "[variables('netPrefix')]"
                    },
                    "subnet1Name": {
                        "value": "[variables('wanName')]"
                    },
                    "subnet1Prefix": {
                        "value": "[variables('wanPrefix')]"
                    },
                    "subnet2Name": {
                        "value": "[variables('lanName')]"
                    },
                    "subnet2Prefix": {
                        "value": "[variables('lanPrefix')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "name": "nic1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion').network]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', 'SettingUpPublicIP')]",
                "[concat('Microsoft.Resources/deployments/', 'SettingUpVirtualNetwork')]",
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nicTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkInterfaceName": {
                        "value": "[variables('nicWan')]"
                    },
                    "networkSecurityGroupName": {
                        "value": "[variables('nsgName')]"
                    },
                    "publicIPAddressName": {
                        "value": "[variables('publicIpName')]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnet1')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "name": "nic2",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion').network]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', 'SettingUpVirtualNetwork')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nic2Template')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "networkInterfaceName": {
                        "value": "[variables('nicLan')]"
                    },
                    "ipConfigName": {
                        "value": "[variables('ipConfigName')]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnet2')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "name": "virtualMachine",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('apiVersion').compute]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicWan'))]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicLan'))]",
                "[concat('Microsoft.Resources/deployments/', 'SettingUpStorageAccount')]",
                "[concat('Microsoft.Compute/availabilitySets/',variables('availabilitySetName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nic2Template')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[variables('vmName')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "adminUsername": {
                        "value": "[variables('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[variables('adminPassword')]"
                    },
                    "imagePublisher": {
                        "value":"[variables('imagePublisher')]"
                    },
                    "imageOffer": {
                        "value": "[variables('imageOffer')]"
                    },
                    "imageSKU": {
                        "value": "[variables('imageSku')]"
                    },
                    "imageVersion": {
                        "value": "[variables('imageVersion')]"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageName')]"
                    },
                    " vmStorageAccountContainerName": {
                        "value":"[variables('vhdContainer')]"
                    },
                    "networkInterfaceName1": {
                        "value": "[variables('nicWan')]"
                    },
                    "networkInterfaceName2": {
                        "value": "[variables('nicLan')]"
                    },
                    "availabilitySetName": {
                        "value": "[variables('availabilitySetName')]"
                    }
                }
            }
        },
        {
            "name": "[variables('clientVmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2015-06-15",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('clientNicName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('clientSaName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[variables('clientVmName')]",
                    "adminUsername": "[variables('clientVmUsername')]",
                    "adminPassword": "[variables('clientVmPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[variables('clientVmSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('clientVMName')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat(concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('clientSaName')), '2015-06-15').primaryEndpoints['blob'], 'vhds/'), variables('clientVMName'), '20170106133023.vhd')]"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('clientNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('clientNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', 'SettingUpVirtualNetwork')]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('clientPipName'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[reference('SettingUpVirtualNetwork','2015-01-01').outputs.subnet2Ref.value]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('clientPipName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                }
            }
        },
        {
            "name": "[variables('clientPipName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2016-09-01",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('clientVmDnsPrefix')]"
                }
            }
        },
        {
            "name": "[variables('clientNsgName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2016-09-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('clientSaName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-06-15",
            "location": "[variables('location')]",
            "properties": {
                "accountType": "[variables('storageType')]"
            }
        }
    ],
    "outputs": {
        "fqdn": {
            "value": "[reference('SettingUpPublicIP').outputs.fqdn.value]",
            "type": "string"
        }
    }
}