{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "documentDB": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2015-04-08",
            "kind": "GlobalDocumentDB",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "name": "[parameters('documentDB').DocDBAccountName]",
            "location": "[parameters('documentDB').location]",
            "properties": {
                "name": "[parameters('documentDB').DocDBAccountName]",
                "databaseAccountOfferType": "[parameters('documentDB').offerType]"
            },
            "tags": {
                "defaultExperience": "DocumentDB"
            }
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-04-01",
            "name": "container-group",
            "location": "East US",
            "dependsOn": [
                "[parameters('documentDB').DocDBAccountName]"
            ],
            "properties": {
              "restartPolicy": "Never",
              "containers": [
                {
                  "name": "cosmos-target",
                  "properties": {
                    "environmentVariables": [
                      {
                        "name": "ACCOUNT_ENDPOINT",
                        "value": "[parameters('documentDB').documentDBAuthKey]"
                      },
                      {
                        "name": "ACCOUNT_KEY",
                        "value": "[listKeys(parameters('documentDB').documentDBAuthKey, '2015-04-08').primaryMasterKey]"
                      },
                      {
                        "name": "TARGET_URL",
                        "value": "[parameters('documentDB').TargetURL]"
                      }
                    ],
                    "resources": {
                      "requests": {
                        "cpu": 1,
                        "memoryInGb": 0.2
                      }
                    }
                  }
                }
              ],
              "osType": "Linux"
            }
          }
        ]
}
