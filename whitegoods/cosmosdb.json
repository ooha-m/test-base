{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "documentDB": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2015-04-08",
            "kind": "GlobalDocumentDB",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "name": "[parameters('documentDB').DocDBAccountName]",
            "location": "[parameters('documentDB').location]",
            "properties": {
                "name": "[parameters('documentDB').DocDBAccountName]",
                "databaseAccountOfferType": "[parameters('documentDB').offerType]",
                "locations": [
                    {
                        "locationName": "[parameters('documentDB').location]",
                        "failoverPriority": 0,
                        "id": "[concat(parameters('documentDB').DocDBAccountName, '-', parameters('documentDB').location)]"
                    }
                ]
            },
            "tags": {
                "defaultExperience": "DocumentDB"
            }
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-04-01",
            "name": "container-group",
            "location": "East US",
            "dependsOn": [
                "[parameters('documentDB').DocDBAccountName]"
            ],
            "properties": {
                "restartPolicy": "Never",
                "containers": [
                    {
                        "name": "cosmos-target",
                        "properties": {
                            "image": "ooha-m/test-base",
                            "environmentVariables": [
                                {
                                    "name": "TARGET_URL",
                                    "value": "[parameters('documentDB').TargetURL]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 0.2
                                }
                            }
                        }
                    }
                ],
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "Target Config URL": {
            "type": "string",
            "value":  "[parameters('documentDB').TargetURL]"
        }
    }
}
