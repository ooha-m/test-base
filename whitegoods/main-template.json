{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "eastus",
            "allowedValues": [
                "eastus",
                "northeurope",
                "southcentralus",
                "southeastasia",
                "westeurope",
                "westus2"
            ],
            "metadata": {
                "description": "Location where all the resources deploy"
            }
        },
        "Demo Target Config File": {
      "defaultValue": "eastus",
      "metadata": {
        "description": "This points to different target config file"
      },
      "type": "string",
      "allowedValues": [
        "Single Unpartitioned Collection",
        "Single Partitioned Collection",
        "DB Throughput",
        "Complete Sample"
      ]
    }
    },
    "variables": {
        "Demo Map": {
      "Single Unpartitioned Collection": "single-unpartitioned-collection.json",
      "Single Partitioned Collection": "single-partitioned-collection.json",
      "DB Throughput": "db-throughput.json",
      "Complete Sample": "complete.json"
    },
        "documentDB": {
            "location": "[parameters('location')]",
            "DocDBAccountName": "[variables('DocDBAccountName')]",
            "offerType": "Standard",
            "DocDBName": "AssetTrackingDB",
            "DocDBGroupGpsCollection": "GroupGpsData",
            "DocDBSensorCollection": "SensorData",
            "DocDBOfferThroughput": "2500",
            "documentDBAuthKey": "[resourceId('Microsoft.DocumentDb/databaseAccounts', variables('DocDBAccountName'))]"
        },       
        "DocDBAccountName": "[concat(toLower(variables('databaseAccountNamePrefix')),variables('suffix'))]",
        "deploymentApiVersion": "2016-02-01",
         "databaseAccountNamePrefix": "docdb",
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 5)]",
        "TargetURLPrefix": "https://raw.githubusercontent.com/vplauzon/cosmos-db-target-config/master/Deployment/target-config/",
    "TargetURL": "[concat(variables('Target URL Prefix'), variables('Demo Map')[parameters('Demo Target Config File')])]",
    "AccountName": "[concat('cosmos-test-account-', uniqueString(concat(subscription().id, resourceGroup().id, 'cosmos')))]",
    "AccountId": "[resourceId('Microsoft.DocumentDB/databaseAccounts', variables('Account Name'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "DocumentDB",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/ooha-m/test-base/master/whitegoods/cosmosdb.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "documentDB": {
                        "value": "[variables('documentDB')]"
                    }
                }
            }
        }
    ]
}
