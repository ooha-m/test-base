{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  
  "parameters": {
    "jenkinsSettings": {
        "type": "secureobject"
    }  
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "location": "[parameters('jenkinsSettings').location]",
      "name": "[parameters('jenkinsSettings').jenkinsPipName]",
      "properties": {
        "dnsSettings": {
          "domainNameLabel": "[parameters('jenkinsSettings').dnsPrefix]"
        },
        "publicIPAllocationMethod": "[parameters('jenkinsSettings').publicIpAddressType]"
      },
      "type": "Microsoft.Network/publicIPAddresses"
    }
  ],
   "outputs": {
    "fqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',parameters('jenkinsSettings').jenkinsPipName),'2016-03-30').dnsSettings.fqdn]"
    }
  }
}
