{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  
  "parameters": {
    "jenkinsSettings": {
        "type": "object"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2017-03-30",
      "dependsOn": [],
      "location": "[parameters('jenkinsSettings').location]",
      "name": "[parameters('jenkinsSettings').vmName]",
      "type": "Microsoft.Compute/virtualMachines",
      "identity": {        
        "Type": "SystemAssigned"        
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('jenkinsSettings').vmSize]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[parameters('jenkinsSettings').networkInterfaceId]"
            }
          ]
        },
        "osProfile": {
          "adminPassword": "[parameters('jenkinsSettings').adminPassword]",
          "adminUsername": "[parameters('jenkinsSettings').adminUserName]",
          "computerName": "[parameters('jenkinsSettings').vmName]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": "true",
            "ssh": {
              "publicKeys": [
                {
                  "keyData": "[parameters('jenkinsSettings').adminSSHPublicKey]",
                  "path": "[concat('/home/',parameters('jenkinsSettings').adminUsername,'/.ssh/authorized_keys')]"
                }
              ]
            }
          }
        },
        "storageProfile": {
          "imageReference": {
            "offer": "UbuntuServer",
            "publisher": "Canonical",
            "sku": "[parameters('jenkinsSettings').ubuntuSku]",
            "version": "latest"
          },
          "osDisk": {
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "name": "osDisk",
            "managedDisk":{
              "storageAccountType": "[parameters('jenkinsSettings').storageAccountType]"
            }
          }
        }
      },
      "resources": [],
      "tags": {
        "displayName": "[parameters('jenkinsSettings').vmName]"
      }
     
    }
  ],
  "outputs": {
    "identity": {
      "type": "object",
      "value": "[reference(concat(resourceId('Microsoft.Compute/virtualMachines', parameters('jenkinsSettings').vmName), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW')]"
    }
  }
}
