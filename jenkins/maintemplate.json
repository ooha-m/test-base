{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "_artifactsLocationSasToken": {
            "metadata": {
                "description": "Artifacts Sas token"
            },
            "defaultValue": "",
            "type": "string"
        },
        "adminPassword": {
            "metadata": {
                "description": "Password for the Virtual Machine. Will be used only if authenticationType is 'password'"
            },
            "defaultValue": "",
            "type": "securestring"
        },
        "adminSSHPublicKey": {
            "metadata": {
                "description": "Public SSH key for the Virtual Machine. Will be used only if authenticationType is 'sshPublicKey'"
            },
            "defaultValue": "",
            "type": "string"
        },
        "adminUserName": {
            "metadata": {
                "description": "User name for the Virtual Machine"
            },
            "type": "string"
        },
        "authenticationType": {
            "metadata": {
                "description": "Authentication type (can be 'password' or 'sshPublicKey')"
            },
            "type": "string"
        },
        "jenkinsReleaseType": {
            "metadata": {
                "description": "Jenkins release type (LTS or weekly or verified)"
            },
            "type": "string",
            "defaultValue": "LTS"
        }
    },
    "variables": {
        "jenkinsSettings":{
            "dnsPrefix":"[concat('jenkinsserver',variables('suffix'))]",
            "location":"[resourceGroup().location]",
            "jenkinsPipName": "jenkins-pip",
           "publicIpAddressType":"Dynamic",
           "networkInterfaceId":"[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
           "adminPassword":"[parameters('adminPassword')]",
           "adminSSHPublicKey":"[parameters('adminSSHPublicKey')]",
           "adminUserName":"[parameters('adminUserName')]",
           "storageAccountType":"Standard_LRS",
           "ubuntuSku":"16.04-LTS",
           "vmSize":"Standard_DS2_v2",
           "vmName":"jenkinsserver",
           "installJenkinsScriptUrl": "[concat(variables('baseUrl'),'/scripts/install_jenkins.sh', parameters('_artifactsLocationSasToken'))]",
           "installJenkinsScriptName": "install_jenkins.sh",
           "vmPrivateIP": "10.0.0.5"
        },
        "baseUrl":"https://raw.githubusercontent.com/ooha-m/test-base/jenkins/jenkins",
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 5)]",
        "frontEndNSGName": "[concat(variables('jenkinsSettings').vmName, 'NSG')]",
        "nicName": "[concat(variables('jenkinsSettings').vmName, 'VMNic')]",
        "publicIPDeploymentName": "[concat(variables('jenkinsSettings').jenkinsPipName, '-publicIP-deploy')]",
        "subnetName": "[concat(variables('jenkinsSettings').vmName, 'Subnet')]",
        "subnetPrefix": "10.0.0.0/24",
        "templateUrlIP": "[concat(variables('baseUrl'),'/nested/pip.json',parameters('_artifactsLocationSasToken'))]",
        "templateUrlVM": "[concat(variables('baseUrl'),'/nested/vm.json',parameters('_artifactsLocationSasToken'))]",
        "virtualNetworkName": "[concat(variables('jenkinsSettings').vmName, 'VNET')]",
        "virtualNetworkPrefix": "10.0.0.0/16",
        "vmDeploymentName": "[concat(variables('jenkinsSettings').vmName, '-VM-deploy')]"
        
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "dependsOn": [],
            "name": "[variables('publicIPDeploymentName')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "jenkinsSettings": {
                        "value": "[variables('jenkinsSettings')]"
                    }
                },
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[variables('templateUrlIP')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2015-06-15",
            "location": "[variables('jenkinsSettings').location]",
            "name": "[variables('frontEndNSGName')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "ssh-rule",
                        "properties": {
                            "access": "Allow",
                            "description": "Allow SSH",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "22",
                            "direction": "Inbound",
                            "priority": 100,
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*"
                        }
                    },
                    {
                        "name": "http-rule",
                        "properties": {
                            "access": "Allow",
                            "description": "Allow HTTP",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "80",
                            "direction": "Inbound",
                            "priority": 101,
                            "protocol": "Tcp",
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*"
                        }
                    }
                ]
            },
            "tags": {
                "displayName": "NSG - Front End"
            },
            "type": "Microsoft.Network/networkSecurityGroups"
        },
        {
            "apiVersion": "2016-03-30",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('frontEndNSGName'))]"
            ],
            "location": "[variables('jenkinsSettings').location]",
            "name": "[variables('virtualNetworkName')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('virtualNetworkPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('frontEndNSGName'))]"
                            }
                        }
                    }
                ]
            },
            "tags": {
                "displayName": "[variables('virtualNetworkName')]"
            },
            "type": "Microsoft.Network/virtualNetworks"
        },
        {
            "apiVersion": "2016-03-30",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
                "[resourceId('Microsoft.Resources/deployments', variables('publicIPDeploymentName'))]"
            ],
            "location": "[variables('jenkinsSettings').location]",
            "name": "[variables('nicName')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIpAddress": "[variables('jenkinsSettings').vmPrivateIP]",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('jenkinsSettings').jenkinsPipName)]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName')),'/subnets/',variables('subnetName'))]"
                            }
                        }
                    }
                ]
            },
            "tags": {
                "displayName": "[variables('nicName')]"
            },
            "type": "Microsoft.Network/networkInterfaces"
        },
        {
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",
                "[resourceId('Microsoft.Resources/deployments', variables('publicIPDeploymentName'))]"
            ],
            "name": "[variables('vmDeploymentName')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "jenkinsSettings": {
                        "value": "[variables('jenkinsSettings')]"
                    }
                },
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[variables('templateUrlVM')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', variables('vmDeploymentName'))]"
            ],
            "location": "[variables('jenkinsSettings').location]",
            "name": "[concat(variables('jenkinsSettings').vmName, '/Init')]",
            "properties": {
                "autoUpgradeMinorVersion": true,
                "protectedSettings": {
                    "commandToExecute": "[concat('./' , variables('jenkinsSettings').installJenkinsScriptName, ' -jf \"', reference(variables('publicIPDeploymentName')).outputs.fqdn.value, '\" -pi \"', variables('jenkinsSettings').vmPrivateIP, '\" -jrt \"', parameters('jenkinsReleaseType') , '\" -al \"', variables('baseUrl'), '\" -st \"', parameters('_artifactsLocationSasToken'), '\"' )]"
                },
                "publisher": "Microsoft.Azure.Extensions",
                "settings": {
                    "fileUris": [
                        "[concat(variables('jenkinsSettings').installJenkinsScriptUrl)]"
                    ]
                },
                "type": "CustomScript",
                "typeHandlerVersion": "2.0"
            },
            "type": "Microsoft.Compute/virtualMachines/extensions"
        }
    ],
    "outputs": {
        "jenkinsURL": {
            "type": "string",
            "value": "[concat('http://', reference(variables('publicIPDeploymentName')).outputs.fqdn.value)]"
        },
        "ssh": {
            "type": "string",
            "value": "[concat('ssh -L 8080:localhost:8080 ', parameters('adminUsername'), '@', reference(variables('publicIPDeploymentName')).outputs.fqdn.value)]"
        }
    }
}
